<h3> Search for Friends </h3>

<div id="stock-lookup">
  <%= form_tag search_friends_path, remote: true, method: :get, id: "stock-lookup-form" do %>
    <div class="form-group row text-center col-md-12">
      <div class="col-md-8">
        <%= text_field_tag :search_param, params[:search_param], placeholder: "Enter Name or Email", autofocus: "true",
                                   class: "form-control search-box input-lg" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
           <i class="fa fa-search"></i> Search Users
        <% end %>
      </div>
    </div>
  <% end%>
</div>

<div id="results">
  <%= render 'result' %>
</div>

