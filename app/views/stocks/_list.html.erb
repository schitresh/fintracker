<table class="table table-striped ">
  <thead>
    <tr>
      <th>Symbol
      <th>Name
      <th>Current Price
      <% if @user.id == current_user.id%>
        <th>Actions
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.ticker %>
        <td><%= stock.name %>
        <td><%= stock.last_price %>
        <% if @user.id == current_user.id%>
          <td><%= link_to 'Delete', user_stock_path(stock), method: :delete,
                          data: { confirm: "Are you sure" }, class: "btn btn-xs btn-danger" %>
        <% end %>
      <tr>
    <% end %>
  </tbody>
</table>